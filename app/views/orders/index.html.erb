<h1>All orders</h1>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Products</th>
			<th>Total</th>
			<th>User</th>
			<th>Date</th>
			<th></th>
		</tr>
	</thead>

	<% @orders.each do |order| %>
		<tr>
			<td>
				<%= order.id %>
			</td>

			<td>
				<ul>
					<% order.order_items.each do |item| %>
						<li>
							<%= item .quantity %>
							<%= item.product.name %>
						</li>
					<% end %>
				</ul>
			</td>

			<td>
				Todo order total price
				<!-- Total price -->
			</td>

			<td>
				<address>
					<strong>
						<%= order.user.first_name %>
					</strong>
					<br/>
					Todo address model association
					<!-- address model -->
					<%#= simple_format order.user.full_address %>
				</address>
			</td>

			<td>
				<p>
					<%= time_ago_in_words order.created_at %>
				</p>
				<p class="text-muted">
					<%= order.created_at.strftime "%b %d, %Y - %H:%M" %>
				</p>
			</td>

			<td>
				<%= form_for order do |f| %>
					<%= f.select :state, Order::STATES %>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>

<script>
	$(function(){
		$("form select").on("change", function(){
			$(this).parent("form").submit();
		});
	});
</script>